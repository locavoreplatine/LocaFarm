<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/appLightBrown</item>
        <item name="colorPrimaryDark">@color/appBrown</item>
        <item name="colorAccent">@color/appBrown</item>
        <!-- To change the popup menu and app text color  -->
        <item name="android:textColor">@color/appBlue</item>
        <!-- To change the background of options menu-->
        <item name="android:itemBackground">@color/appLightBlue</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/appBlue</item>
        <item name="colorControlActivated">@color/appBlue</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



</resources>
